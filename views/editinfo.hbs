<div class="container-fluid">
    <div class="row flex-nowrap">
        {{> sidebar}}
        <div class="col py-3">
            <div class="bg-purple">
                <h1>{{subject}}</h1>
            </div>
            {{#each file}}
            <div class="row col-md-10 m-5">
                <div class="col-md fs-3">
                    <form action="/edit/{{location}}/{{filename}}" method="post">
                        <div class="upload-form">
                            <input type="text" class="form-control" placeholder="{{originalname}}" name="filename" autocomplete="off"/>
                            <textarea class="fs-5" rows="8" cols="40" placeholder="{{info}}" name="info" autocomplete="off"></textarea>
                            <!--input type="hidden" value="{{originalSubject}}" name="url" /-->
                            <input type="submit" value="PrzeÅ›lij" class="btn btn-default" />
                            <!--input type="text" class="col-md-3 fs-6" placeholder="{{author}}" name="author" /-->
                            </div>
                    </form-->
                </div>
                <div class="col-md-1 edit">
                    <a href="/edit/{{location}}/{{filename}}">
                        <img src="/img/edit.png">
                    </a>
                </div>
                <div class="col-md-4">
                    <figure class="figureInfo">
                        <img class="infoImg" src="/img/extensions/{{extension originalname}}.png">
                        <a class="text-decoration-none" href="/download/{{location}}/{{filename}}">
                            <img class="downloadInfoImg" src="/img/download.png">
                        </a>
                        <figcaption>{{originalname}}</figcaption>
                    </figure>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>