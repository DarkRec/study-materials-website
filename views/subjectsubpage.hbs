<div class="container-fluid">
    <div class="row flex-nowrap">
        {{> sidebar}}
        <div class="col py-3">
            <div class="bg-purple">
                <h1>{{subject}}</h1>
            </div>
            {{> uploader}}
            <div class="mt-5" id="collection-content">
                {{#each collection}}
                    {{#if (isdefined info)}}
                    {{> loadedfile}}
                    {{else}}
                    {{> loaddir}}
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>